			<dependency>
				<groupId>${project.groupId}</groupId>
				<artifactId>easycode-example-model</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>${project.groupId}</groupId>
				<artifactId>easycode-example-core</artifactId>
				<version>${project.version}</version>
			</dependency>
			
			<!-- 第三方jar包 -->
			<dependency>
				<groupId>javax.servlet</groupId>
